<section class="flex-container">
  <section>
    <%= form_with model: @user, url: update_user_path do |i| %>
      <%= i.file_field :image %>
      <%= i.submit "Submit" %>
    <% end %>
    <%= image_tag(@current_user.image.url) %>
    <%= link_to "Reset to default image.", default_image_path, method: :put %>
  </section>

  <%= form_with model: @user, url: update_user_path do |user| %>

    <section class="flex-container form-for-edit">
      <%= user.text_field :username, value: @current_user.username, class: "form-for-item form-control" %>
      <article class="flex-container first-lastname">
        <%= user.text_field :firstname, value: @current_user.firstname, class: "form-for-item form-control" %>
        <%= user.text_field :lastname, value: @current_user.lastname, class: "form-for-item form-control" %>
      </article>
    </section>
    <%= user.hidden_field :id, value: @current_user.id %>
    <%= user.submit "Save changes", data: {confirm: "Are you sure that you want to update your profile?"}, class: "form-for-item form-control button" %>
  <% end %>

  <%= link_to "Delete your account", delete_user_path, method: :delete, data: {confirm: "Are you sure that you want to delete your account permenently? \n\r There will be no way to restore your account!"} %>
</section>

<%= render 'layouts/footer' %>